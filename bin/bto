#!/usr/bin/python

import httplib
import json
import sys
from urllib import urlencode

def blinkto(uri):
	headers = {'Content-type':'application/x-www-form-urlencoded', 'Accept':'text/plain'}
	params = urlencode({'uri':uri})
	conn = httplib.HTTPConnection('blink.to')
	conn.request('PUT', '/', params, headers)
	return json.loads(conn.getresponse().read()).get('uri')


def main():

	if len(sys.argv) == 1 or sys.argv[1] == "-h":
		print >>sys.stderr, "usage: bto uri uri ..."
		print >>sys.stderr, """
Generates out a blink.to shortened URL for each argument.
options:
	-     read from stdin instead of arguments
	-h    this cruft.
examples:
	bto http://33ad.org
	echo http://33ad.org | bto -
"""

		return

	if sys.argv[1] == "-": inp = sys.stdin
	else: inp = sys.argv[1:]

	for x in inp:
		print blinkto(x)


if __name__ == '__main__': main()
